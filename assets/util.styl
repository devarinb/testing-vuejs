text-color = #000
bg-color = #fff
salmon-color = #e5bbb1

font-stack = Tiempos Text, helvetica-neue, sans-serif
header-font-stack = Tiempos Headline, helvetica-neue, sans-serif

logo-size = 56px
mobile-padding = 24px
tablet-padding = 48px


// Media query shortcuts. above/below are inclusive/exclusive.
mobile = 375px
tablet = 768px
desktop = 1024px

above(w)
  @media screen and (min-width: w)
    {block}

below(w)
  @media screen and (max-width: w - 1)
    {block}

between(w1, w2)
  @media screen and (min-width: w1) and (max-width: w2 - 1)
    {block}

text-h1()
  font-family header-font-stack
  font-size 36px
  font-weight bold
  line-height 36px
  text-decoration none
  +above(tablet)
    font-size 64px
    line-height 64px

text-h2()
  font-family header-font-stack
  font-size 24px
  font-weight bold
  line-height 28px
  +above(tablet)
    font-size 36px
    line-height 40px

text-h3()
  color salmon-color
  font-family font-stack
  font-size 16px
  font-style italic
  line-height 24px

text-body()
  font-family font-stack
  font-size 16px
  line-height 20px
  +above(tablet)
    font-size 24px
    line-height 28px

text-small()
  font-family font-stack
  font-size 12px
  line-height 20px
  +above(tablet)
    font-size 16px
    line-height 24px

nav-padding-size(page-padding)
  page-padding + page-padding * 2 + logo-size

nav-padding()
  +below(tablet)
    padding-top nav-padding-size(mobile-padding)
  +above(tablet)
    padding-top nav-padding-size(tablet-padding)
